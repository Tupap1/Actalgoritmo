public class ValorHoraTrabajada {

    public static void main(String[] args) {
        // Salario total mensual
        double salarioTotalMensual = 1056028;

        // Horas trabajadas al mes
        int horasTrabajadasMes = 36;

        // Cálculo del valor de una hora trabajada
        double valorHoraTrabajada = salarioTotalMensual / horasTrabajadasMes;

        // Impresión del resultado
        System.out.println("El valor de una hora trabajada es: $" + valorHoraTrabajada);
    }
}
